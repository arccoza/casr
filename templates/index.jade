extends base


block main_body
  section.slider
    each img in collections.imgSlider
      img.slider__item(src='#{img.src}')
  ul.infobar
    li.infobar__item
      |phone:&nbsp;
      a(href='tel:#{site.telephone.main}')= site.telephone.emergency
    li.infobar__item
      |alt:&nbsp;
      a(href='tel:#{site.telephone.alt}')= site.telephone.emergency
    li.infobar__item
      |emergency:&nbsp;
      a(href='tel:#{site.telephone.emergency}')= site.telephone.emergency
    li.infobar__item
      |email:&nbsp;
      a(href='mailto:#{site.email}')= site.email
  section.welcome
    != contents
  section.rooms
    h1 Accomodation
    ul.rooms__inner
      each room in collections.rooms.slice(0, 3)
        li.rooms__item
          article.room.room--compact
            .room__inner
              .room__body
                if room.featuredImage
                  //- img.post__featured-image(src='/img/' + post.featuredImage)
                  .room__featured-image(style='background-image:url(#{"/img/rooms/" + room.featuredImage})')

                a.room__button.button(href='/accomodation') more info
              .room__title
                h3
                  = room.title
              .room__excerpt!= room.contents
    .rooms__more
      a.button.button--large.button--dark(href='/accomodation') see all our rooms

  section.service
    h1 Services & Facilities
    ul.services__inner
      each service in collections.services.slice(0, 2)
        li.services__item
          article.service.service--compact
            .service__inner
              .service__image
                if service.featuredImage
                  //- img.post__featured-image(src='/img/' + post.featuredImage)
                  .service__featured-image(style='background-image:url(#{"/img/" + service.featuredImage})')

                a.service__button.button(href='/services-facilities') more info
              .service__body
                .service__title
                  h3
                    = service.title
                .service__excerpt!= service.contents
    .services__more
      a.button.button--large.button--dark(href='/services') see all our services


